@model LeshBrain.ViewModels.InfoTestViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Name"] = "Тесты";
}
<div class="scroll-block table-block container">
    <div class="row d-flex justify-content-center">
        <div class="col-5">
            <form class="filtrLib" method="post" asp-controller="Test" asp-action="Add">
                <div class="text-center">
                    <h3>Новый тест</h3>
                </div>
                <div class="form-row">
                    <div class="row">
                        <div class="col-md-10 justify-content-center">
                            <div class="m-3">
                                    <label for="name">Название</label>
                                    <input type="text" asp-for="Test.Name" class="form-control tbhr-input" id="name" placeholder="Название" required>
                            </div>
                            <div class="m-3">
                                <label for="opis">Описание</label>
                                    <textarea asp-for="Test.Description" name="" id="" cols="30" rows="4" itemid="opis" class="tbhr-input form-control" required></textarea>
                            </div>
                            <div class="m-3">
                                <label for="name">Кол-во вопросов</label>
                                    <input type="number" min="1" max="20" asp-for="Test.AmountQuestion" class="form-control tbhr-input" id="name" placeholder="Кол-вопросов" required>
                            </div>
                            <div class="m-3">
                                    <label for="inputState">Категория</label>
                                    <select id="inputState" name="categoryID" asp-items="Model.ListCategory" class="form-control">
                                    </select>
                            </div>
                                <div class="m-3 text-center">
                                    <button type="submit" class="tb-btn btn rounded-pill">Добавить</button>
                                </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
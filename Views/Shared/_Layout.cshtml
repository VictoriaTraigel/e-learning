<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/head.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg header navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand m-1" asp-area="" asp-controller="Home" asp-action="Index">
                <strong>LeshBrain</strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="About">О нас</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Capabilities">Возможности</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex">
                @if(User.Identity.IsAuthenticated)
                {
                    <div class="user_layout">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="text-white">@User.Identity.Name</span><img src="~/Content/UsersImage/spanch.jpg" alt="avatar" class="img-user rounded-circle" />
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownUser">
                                <li>
                                    @if (User.IsInRole("admin"))
                                    {
                                        <form method="get" asp-controller="Admin" asp-action="Index">
                                            <button type="submit">Кабинет</button>
                                        </form>
                                    }
                                    else if (User.IsInRole("employee"))
                                    {
                                        <form method="get" asp-controller="Client" asp-action="Index">
                                            <button type="submit">Кабинет</button>
                                        </form>
                                    }
                                    else if (User.IsInRole("mentor"))
                                    {
                                        <form method="get" asp-controller="Mentor" asp-action="Index">
                                            <button type="submit">Кабинет</button>
                                        </form>
                                    }
                                </li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <button type="submit">Выйти</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <form method="get" asp-controller="Account" asp-action="Index">
                        <button type="submit" formmethod="get" class="reginbtn btn rounded-pill">Войти</button>
                        <button type="submit" formmethod="get" class="reginbtn btn rounded-pill">Регистрация</button>
                    </form>
                 }
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer>
        <div class="container-fluid footer">
            <div class="row justify-content-md-center">
                <div class="col-5 footer-col d-flex justify-content-between">
                    <strong class="nameCompany">LeshBrain</strong>
                    <span id="numberCompany">+375291000102</span>
                    <span class="socnetwork">
                        <a href="https://bsuir.by" target="_blank"><img src="../img/footer_instagram.png" class="footer-img" alt="instagram"></a>
                        <a href="https://bsuir.by" target="_blank"><img src="../img/footer_telega.png" alt="telegram" class="footer-img"></a>
                        <a href="https://bsuir.by" target="_blank"><img src="../img/footer_vk.png" alt="vk" class="footer-img"></a>
                    </span>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="col-5 footer-col-sec d-flex justify-content-between">
                    <ul class="footer-list">
                        <li class="footer-li"><a href="#" class="foooter-li-link">Карьера</a></li>
                        <li class="footer-li"><a href="#" class="foooter-li-link">Тесты</a></li>
                    </ul>
                    <ul class="footer-list">
                        <li class="footer-li"><a class="foooter-li-link" asp-controller="Home" asp-action="About">О нас</a></li>
                        <li class="footer-li"><a class="foooter-li-link" asp-controller="Home" asp-action="Capabilities">Возможности</a></li>
                    </ul>
                    <ul class="footer-list">
                        <li class="footer-li"><a href="#" class="foooter-li-link">Преподаватели</a></li>
                        <li class="footer-li"><a href="#" class="foooter-li-link">Компании</a></li>
                    </ul>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="col-5 footer-col-sec d-flex justify-content-center">
                    Made by Vic Traigel
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/home.js"></script>
</body>
</html>